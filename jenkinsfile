pipeline {
    agent {
    docker {
            image 'golang:1.10'
            reuseNode true
            args '-v $WORKSPACE/drygopher:/go/src/drygopher'
        }
    }
    stages {
        stage('Prepare') {
            steps {
                echo 'Preparing build environment...'
                sh 'go install github.com/vektra/mockery && go get -u github.com/golang/dep/cmd/dep'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'ls -a $GOPATH/src/drygopher'
                sh 'cd $GOPATH/src/drygopher && make build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'cd $GOPATH/src/drygopher && make test'
            }
        }
    }
}