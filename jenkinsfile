pipeline {
    agent {
    docker {
            image 'golang:1.10'
            reuseNode true
            args '-v $WORKSPACE/components/drygopher:/go/src/drygopher'
        }
    }
    stages {
        stage('Prepare') {
            steps {
                checkout scm
                echo 'Preparing build environment...'
                sh 'go get -u github.com/golang/dep/cmd/dep'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'cd $GOPATH/src/drygpher && make build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'cd $GOPATH/src/drygpher && make test'
            }
        }
    }
}