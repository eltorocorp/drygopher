pipeline {
    agent  {
        docker { image 'golang:1.10' } 
    }

    stages {
        stage('Prepare') {
            steps {
                echo 'Preparing build environment...'
                sh 'curl https://raw.githubusercontent.com/golang/dep/master/install.sh | sh'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'make build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'make test'
            }
        }
    }
}