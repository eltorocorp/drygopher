pipeline {
    agent  {
        docker { image 'golang:1.10' } 
    }
    stages {
        stage('Prepare') {
            steps {
                checkout scm
                echo 'Preparing build environment...'
                sh 'go get -u github.com/golang/dep/cmd/dep'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'make build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'make test'
            }
        }
    }
}