pipeline {
    agent  {
        docker { image 'golang:1.10' } 
    }

    stages {
        stage('PrepareBuildEnvironment') {
            steps {
                echo 'Preparing build environment...'
                sh 'make prepare'
                sh 'make install'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'make build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'make test'
            }
        }
    }
}